@model IEnumerable<VisitorDAL.Visitor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="form-group pull-right">
    <div class="col-md-10"><input class="right" id="txtVisitorSearch" onkeyup="SearchVisitor()" 
                                  placeholder="Search" title="Search Visitor" />
    </div>
</div>
<table class="table table-striped table-hover table-bordered" id="tblVisitor">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.VisitorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Purpose)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.meetingPerson)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="trVisitor">
        <td class="tdVisitor">
            @Html.DisplayFor(modelItem => item.VisitorName)
        </td>
        <td class="tdVisitor">
            @Html.DisplayFor(modelItem => item.ContactNo)
        </td>
        <td class="tdVisitor">
            @Html.DisplayFor(modelItem => item.EMail)
        </td>
        <td class="tdVisitor">
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td class="tdVisitor">
            @Html.DisplayFor(modelItem => item.Purpose)
        </td>
        <td class="tdVisitor">
            @Html.DisplayFor(modelItem => item.meetingPerson)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VisitorId }) 
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.VisitorId }) 
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.VisitorId })
        </td>
    </tr>
}

</table>

<script src="~/Scripts/VisitorManagement.js"></script>
